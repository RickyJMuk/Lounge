<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <title>Savannah Lounge || ADMIN</title>
  <link href="assets/css/style.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f8f9fa;
      color: #343a40;
    }

    #header {
      background-color: #343a40;
      color: #ffffff;
    }

    #tbl-container {
      padding-top: 100px;
    }

    .logo a {
      color: #ffffff;
      text-decoration: none;
    }

    h2 {
      color: #343a40;
    }

    table {
      background-color: #ffffff;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
      text-align: center;
      vertical-align: middle !important;
    }

    th {
      background-color: #343a40;
      color: #ffffff;
    }

    tbody tr:nth-child(even) {
      background-color: #f8f9fa;
    }

    .btn-danger {
      background-color: #dc3545;
      border-color: #dc3545;
    }

    .btn-danger:hover {
      background-color: #c82333;
      border-color: #bd2130;
    }
  </style>
</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
      <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">
  
        <h1 class="logo me-auto me-lg-0"><a href="/dashboard">Savannah Vintage Lounge</a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
  
        <nav id="navbar" class="navbar order-last order-lg-0">
          <ul>
            <li><a class="nav-link scrollto active" href="/dashboard">Dashboard</a></li>
          </ul>
          <!-- <div class="languages d-none d-md-flex align-items-center">
            <a href="/admin-login">Admin</a>
  
          </div> -->
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->
  
  
      </div>
    </header><!-- End Header -->
  
  <div id="tbl-container" class="container mt-4">

    <h2 class="mb-4">Your Bookings</h2>
    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Date</th>
          <th>Time</th>
          <th>People</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.id %></td>
            <td><%= booking.name %></td>
            <td><%= booking.email %></td>
            <td><%= booking.phone %></td>
            <td><%= booking.date %></td>
            <td><%= booking.time %></td>
            <td><%= booking.people %></td>
            <td>
              <form action="/admin/delete/<%= booking.id %>" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
